<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Course" table="courses" schema="coursesregistrationdb">
        <id name="id">
            <column name="id" sql-type="int unsigned"/>
        </id>
        <property name="teachername">
            <column name="teachername" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="classroom">
            <column name="classroom" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="dayofweek">
            <column name="dayofweek" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="shift">
            <column name="shift" sql-type="varchar(20)" length="20"/>
        </property>
    </class>
</hibernate-mapping>